footer.sunset.lumen-frame--wide
    .sunset__wrapper
        .sunset__menus
            
            each column in menus
                //- - console.log(column)
                each item in column
                    //- | #{item}
                div.sunset__column
                    h3 #{column.title}
                    
                    ul
                        each item, key in column.menu
                            li
                                a(href="#{item.link}") #{item.text}

        .sunset__legal
            .sunset__legal-links
                a(href="http://www.vivintsolar.com/en/privacy-policy") Privacy Policy
                a(href="http://www.vivintsolar.com/en/terms-of-use") Terms and Conditions
                a(href="http://www.vivintsolar.com/en/solar-insurance") Insurance
